<!-- signup form. I have create a username entry field and create a password entry field. Then i have the submit button and login link to go to after-->

<section class="signin-page"></section>
    <div class="form-heading">
        <h1>Sign Up</h1>
    </div>
    <div class="form-section">
        <form class="signup-form">
            <div>
                <label for="signup-username">Create a Username</label>
                <input type="text" class="entry-field" id="signup-username" />
            </div>
            <div>
                <label for="signup-password">Create a password</label>
                <input type="password" class="entry-field" id="signup-password" />
            </div>
            <div>
                <button type="submit" class="signup-btn">Sign Up!</button>
            </div>
        </form>
    </div>

    <a href="/login" class="login-link">log in instead</a>
</section>

<script src="/js/signUp.js"></script>
