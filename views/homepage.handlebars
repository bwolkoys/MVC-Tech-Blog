<!-- from module 14 mini project for structure. I'm rendering multiple blog posts on the page-->
{{#each posts as |post| }}
<div class="row"></div>

    <div class="container postBox">
        <!-- the headerRow contains title and created at and id -->
			<div class="row  justify-content-center headerRow">
      <div class="col-8">
        <h2>
          <a class="postTitle text-uppercase" href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
      </div>
 <div class="col-4">
         <!--username and created at will display in a right aligned paragraph -->
        <p class="postCreate text-right">Created by
          {{post.user.username}}
          on
          {{format_date post.created_at}}
        </p>
      </div>
			</div>
    <div class="postDesc">
      <p class="text-center postDescMain">
        {{post.content}}
      </p>
    </div>
    </div>

  </div>

{{/each}}
